@model nfCMS_NET.Models.Core.nContentIncludedModel

@{
    
    nfCMS_NET.Content.nContent News = Model.Entry;

     News.GenerateLink();
     List<nfCMS_NET.Content.nContent.nAttachment> Att = News.Attachments("image", "indeximg");
     nfCMS_NET.Content.ContentManagement.GetContent CM = new nfCMS_NET.Content.ContentManagement.GetContent(new string[]{"eComment"},null,null,"{prefix}Content.cDate","DESC",false,0,0,News.ID);
 
     
     }
 <div class="listentry">
 <div class="listentry_left">
 @if (Att.Count > 0)
 {
     
 <img src="@Att[0].Path" alt="@News.Title"  border="0"/>
 }
     </div>
 <div class="listentry_right">
  <div class="listentry_top">
 <a href="/News/@News.actionpath">   
 <h2>@News.Title</h2>
 </a>
 </div>
 <div class="listentry_middle">
 
 Von&nbsp;@Html.ActionLink(News.CreatorName,"u/"+ News.CreatorName,"Profile") am&nbsp;<span>@News.CreationDate.ToString().Substring(0,10)</span>&nbsp;in <a href="/News/Category/@News.CategoryName">@News.CategoryName</a>&nbsp;
<span class="ui-icon ui-icon-comment" style="display:inline-block" title="Kommentare"></span>@CM.TotalRows
<span class="ui-icon ui-icon-lightbulb" style="display:inline-block" title="Klicks"></span>@News.ClickCount
 </div>
 <div class="listentry_bottom">
 @News.PreviewText
 
 </div>
 </div>
 </div>
 <div class="content_hr"></div>